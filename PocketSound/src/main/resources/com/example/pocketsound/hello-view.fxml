<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.ScrollPane?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.pocketsound.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <ScrollPane fx:id="sPane">
        <VBox fx:id="songList"></VBox>
    </ScrollPane>
    <Label fx:id="welcomeText"/>
    <Button text="Bajar canciones" onAction="#downloadSongs"/>
    <Button text="Seleccionar Archivo..." onAction="#selectAudio"/>
    <Label fx:id="fileNameLabel"/>
    <Label fx:id="fileTypeLabel"/>
</VBox>
